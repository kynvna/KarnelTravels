@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var q = ViewBag.editht as TblHotelRestaurant;
}
@model GetHotel_Res_Re;
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="ibox">
            <div class="ibox-body">
                <form id="frmData" action="/Admin/EditAdminHotel" class="form-horizontal" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label>
                                ID <span class="text-muted" style="font-size:10px">
                                    - ID of the Hotel/Restaurant/Hotel
                                </span>
                            </label>
                            <input readonly value="@Model.tblHotel.HrId" class="form-control" type="text" name="Hrid">
                        </div>
                        <div class="form-group col-md-4">
                            <label>
                                Name <span class="text-muted" style="font-size:10px">
                                    - Name of the Hotel/Resort/Restaurant
                                </span>
                            </label>
                            <input value="@Model.tblHotel.Name" class="form-control" name="Name">
                        </div>
                        <div class="form-group col-md-4">
                            <label>
                                Estimated Price <span class="text-muted" style="font-size:10px">
                                    - per service
                                </span>
                            </label>
                            <input value="@Model.tblHotel.Price" class="form-control" name="Price">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label>
                                Spot<span class="text-muted" style="font-size:10px">
                                    - Select spot
                                </span>
                            </label>
                            <select class="form-control" name="spot">
                                <option selected value="@Model.tblHotel.SpotId">-- Please select spot --</option>
                                @foreach (var item in Model.tblSpots)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label>
                                Select<span class="text-muted" style="font-size:10px">
                                    - Select upload category if needed.
                                </span>
                            </label>
                            <select class="form-control" id="hotelDropdown" name="selectObject">
                                <option selected value="Hotel_Restaurant">-- Please select spot --</option>
                                <option value="Hotel_Restaurant">Hotel_Restaurant</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label>
                                Category<span class="text-muted" style="font-size:10px">
                                    - Select category
                                </span>
                            </label>
                            <select class="form-control" name="catid">
                                <option selected value="@Model.tblHotel.CatId">-- Select category --</option>
                                @foreach (var item in Model.HrCategories)
                                {
                                    <option value="@item.CatId">@item.CatName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label>Current images of this transportation</label>
                        </div>
                        @foreach (var item in Model.HrImages)
                        {
                            <div class="col-md-4">
                                <div class="card h-100">
                                    <img style="object-fit:cover;" height="200px" width="auto" id="hotelImage_@item.Id" src="~/img/Hotel_Restaurant/@item.Url" class="small-image" alt="">
                                    <button id="deletebtn" class="btn btn-warning btn-sm delete-image-btn" data-image-id="@item.Id">
                                        <i class="fa fa-minus"></i> Delete
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                    <br/>
                    <div class="row">
                        <div class="form-group col-md-10">
                            <input class="form-control" type="file" name="FileImg" multiple>
                        </div>
                        <div class="form-group col-md-2">
                            <label>Activated <span> @Html.CheckBoxFor(Model => Model.Active)</span></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label>Description</label>
                            <textarea id="editor" asp-for="@Model.tblHotel.Description" class="form-control"></textarea>
                            <input type="hidden" name="mydata" id="mydata" value="" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <button name="btnSave" id="btnSave" class="btn btn-success" type="submit">Submit</button>
                            <a asp-action="AdminHotelView" class="btn btn-danger" asp-controller="Admin">Go Back</a>
                        </div>

                    </div>

                </form>

            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
<script src="~/ckeditor/ckeditor.js" type="text/javascript"></script>

@section scripts {

    <script>
        CKEDITOR.replace('editor');
        //window.onload = function () {

        //};
        $(document).ready(function (e) {

            $("#btnSave").click(function (e) {
                e.preventDefault();
                var dt = CKEDITOR.instances['editor'].getData();
                $("#mydata").val(dt);
                $("#frmData").submit();
            });
        });
        var pathImg = "";
        window.onload = () => {
            var lsImage = document.querySelectorAll(".pic-rect>img");

            for (i = 0; i < lsImage.length; i++) {
                lsImage[i].onclick = (event) => {
                    var current_img = event.target;
                    pathImg = current_img.src;
                }
            }
            setInterval(() => {
                var q = document.querySelector("#cke_103_textInput");
                if (q != null) {
                    if (q.value == "") {
                        q.value = pathImg;
                        pathImg = "";
                    }

                }
            }, 100);
        }
    </script>

    <script>
        $(document).ready(function () {
            // Attach click event handler to all delete buttons with class "delete-image-btn"
            $(".delete-image-btn").on("click", function (event) {
                event.preventDefault(); // Prevent default form submission

                const imageId = parseInt($(this).data("image-id"), 10); // Get image ID from data-attribute

                if (confirm("Are you sure you want to delete this image?")) {
                    deleteImage(imageId); // Call the deleteImage function
                }
            });
        });

        function deleteImage(imageId) {
            const imageElement = $("#hotelImage_" + imageId);
            const deletebtn = $("#deletebtn");
            console.log(deletebtn)
            console.log(imageElement)


            if (imageElement.length) { // Check if image element exists
                // Remove image element from DOM
                imageElement.remove();
                deletebtn.remove();

                // Send AJAX request to server for permanent deletion (optional)
                $.ajax({
                    url: "/Admin/DeleteHotelImg/" + imageId, // Assuming your server-side action URL
                    method: "POST", // Assuming your server-side method expects POST
                    data: { imageId: imageId }, // Send image ID as data
                    success: function (data) {
                        // Handle successful deletion response (optional)
                        console.log("Image deletion status:", data);
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        // Handle error response (e.g., display error message)
                        console.error("Error deleting image:", xhr.status, thrownError);
                    }
                });
            } else {
                console.error("Image element with ID 'hotelImage_" + imageId + "' not found.");
            }
        }
    </script>
}