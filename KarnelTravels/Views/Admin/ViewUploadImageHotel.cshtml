@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@model GetHotel_Res_Re;
<div class="row">
    <div class="col-md-12">
        <div class="ibox">
            <div class="ibox-head">
                <h1 class="ibox-title">Image upload for Hotel/Resort/Restaurant/Transports and other entities</h1>
            </div>
            <div class="ibox-body">
                <form action="/admin/Upload" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <label>Spot</label>
                            <select class="form-control col-md-6" name="objectid">
                                <option selected>Select category to upload</option>
                                @foreach (var item in Model.HrCategories)
                                {
                                    <option value="@item.CatId">@item.CatName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label>Category</label>
                            <select class="form-control col-md-6" name="objectname">
                                <option selected>Select category to upload</option>
                                @foreach (var item in Model.HrCategories)
                                {
                                    <option value="@item.CatName">@item.CatName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label>Image</label>
                            <input class="form-control" type="file" name="files" multiple>
                        </div>
                    </div>
                    <input class="btn btn-success" type="submit" value="Upload selected photos">
                    <a class="btn btn-danger" href="javascript:history.back()">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
