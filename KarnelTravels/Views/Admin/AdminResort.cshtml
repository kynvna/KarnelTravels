@model List<KarnelTravels.Models.HRViewModel>
@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Restaurant List</h1>

<form>
    <button asp-action="CreateResort" asp-controller="Admin" class="btn btn-primary">Create Hotel</button>
    <table class="table table-responsive table-hover">
        <thead>
            <tr class="table active">
                <th class="text-center">Name</th>
                <th class="text-center">Price</th>
                <th class="text-center">Description</th>
                <th class="text-center">image</th>
                <th class="text-center">Spot</th>



            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var resort in Model)
                {
                    <tr>
                        <td class="text-center">@resort.Name</td>
                        <td class="text-center">@resort.Price</td>
                        <td class="text-center">@resort.Description</td>
                        <td class="text-center"><img src="~/upload/@resort.Imglink" class="hinh"></td>
                        <td class="text-center">@resort.SpotName</td>



                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Admin" asp-action="EditResort" asp-route-id="@resort.HrId" class="btn btn-primary">Edit</a>
                                <form asp-controller="Admin" asp-action="DeleteResort" method="post">
                                    <input type="hidden" name="id" value="@resort.HrId" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this resort?')">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">
                        <div>
                            No Resort available at this moment
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>