@model IEnumerable<KarnelTravels.Models.TblNews>

@{
    ViewData["Title"] = "AdminNewsView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--This is the view to show all the news of the web page -->
<a class="btn btn-info" asp-action="CreateNews">Create a News</a>
<br/>
<div class="row">
   <div class="col-md-12">
        <div class="ibox">
            <div class="ibox-body">
                <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NewsObject)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HotNews)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td >
                                    <a asp-controller="Home" asp-action="NewsDetail" asp-route-id="@item.NewsId">@Html.DisplayFor(modelItem => item.Description)</a>
                                </td>
                                <td>
                                    @if (item.Status == "Active")
                                    {
                                        <strong style="color:limegreen">@Html.DisplayFor(modelItem => item.Status)</strong>
                                    }
                                    else
                                    {
                                        <strong style="color:red">@Html.DisplayFor(modelItem => item.Status)</strong>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NewsObject)
                                </td>
                                <td>
                                    @if (item.HotNews == 1)
                                    {
                                        <input type="checkbox" checked onclick="return false;" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" onclick="return false;" />
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    <a class="btn btn-info" asp-action="EditNews" asp-route-id="@item.NewsId">Edit</a>
                                    <span><a class="btn btn-danger" asp-action="DeleteNews" asp-route-id="@item.NewsId">Delete</a></span>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
   </div>
</div>