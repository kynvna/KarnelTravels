@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var travel = ViewBag.Travel as TblTravel;
    
}
@model GetCar_Plane_Train;
<div class="ibox">
    <div class="ibox-head">
        <h3 class="ibox-title">Editing Transport</h3>
    </div>
    <div class="ibox-body">
        <form id="frmData" action="/admin/EditAdminTransport" method="post" enctype="multipart/form-data">
            <div>Name</div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                    <input value="@Model.travel.TravelId" class="form-control" type="text" name="Id">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10 ml-sm-auto">
                    <input value="@Model.travel.Name" class="form-control" name="Name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10 ml-sm-auto">
                    <input value="@Model.travel.Price" class="form-control" name="Price">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Diem di</label>
                <div class="col-sm-10 ml-sm-auto">
                    <select class="form-select border-0 py-3" name="spot">

                        <option selected>Chon</option>
                        @foreach (var item in Model.Spots)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label>Arrival Spot</label>
                    <select class="form-control" name="spot">
                        <option selected>---Select Spot---</option>
                        @foreach (var item in Model.Spots)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label>Transportation</label>
                    <select class="form-control" name="Tran">
                        <option selected">--Select means of transport---</option>
                        @foreach (var item in Model.Transportations)
                        {
                            <option value="@item.CatId">@item.CatName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="col-sm-10">
                <input class="form-control" type="file" name="FileImg" multiple>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Description</label>
                <textarea id="editor" asp-for="@Model.travel.Description" class="form-control"></textarea>
                <input type="hidden" name="mydata" id="mydata" value="" />


            </div>
            @Html.CheckBoxFor(Model => Model.Active)           
            <div class="form-group row">
                <div class="col-sm-10 ml-sm-auto">
                    <button name="btnSave" id="btnSave" class="btn btn-info" type="submit">Submit</button>
                </div>
            </div>
        </form>


        <div class="col-4" style="min-height:40rem;background-color:#0072a6;">

            @foreach (var item in Model.HrImages)
            {
                <div class="pic-rect">
                    <img id="hotelImage_@item.Id" src="~/img/Travel/@item.Url" class="small-image" alt="">
                    <button id="deletebtn" class="btn btn-default btn-sm delete-image-btn" data-image-id="@item.Id">
                        <i class="fa fa-minus"></i>  Delete
                    </button>
                </div>
            }

        </div>
    </div>
    <script src="~/ckeditor/ckeditor.js" type="text/javascript"></script>

    @section scripts {

        <script>
            CKEDITOR.replace('editor');
            //window.onload = function () {

            //};
            $(document).ready(function (e) {

                $("#btnSave").click(function (e) {
                    e.preventDefault();
                    var dt = CKEDITOR.instances['editor'].getData();
                    $("#mydata").val(dt);
                    $("#frmData").submit();
                });
            });
            var pathImg = "";
            window.onload = () => {
                var lsImage = document.querySelectorAll(".pic-rect>img");

                for (i = 0; i < lsImage.length; i++) {
                    lsImage[i].onclick = (event) => {
                        var current_img = event.target;
                        pathImg = current_img.src;
                    }
                }
                setInterval(() => {
                    var q = document.querySelector("#cke_103_textInput");
                    if (q != null) {
                        if (q.value == "") {
                            q.value = pathImg;
                            pathImg = "";
                        }

                    }
                }, 100);
            }
        </script>
        <script>
            $(document).ready(function () {
                // Attach click event handler to all delete buttons with class "delete-image-btn"
                $(".delete-image-btn").on("click", function (event) {
                    event.preventDefault(); // Prevent default form submission

                    const imageId = parseInt($(this).data("image-id"), 10); // Get image ID from data-attribute

                    if (confirm("Are you sure you want to delete this image?")) {
                        deleteImage(imageId); // Call the deleteImage function
                    }
                });
            });

            function deleteImage(imageId) {
                const imageElement = $("#hotelImage_" + imageId);
                const deletebtn = $("#deletebtn");
                if (imageElement.length) { // Check if image element exists
                    // Remove image element from DOM
                    imageElement.remove();
                    deletebtn.remove();
                    // Send AJAX request to server for permanent deletion (optional)
                    $.ajax({
                        url: "/Admin/DeleteTranSportImg/" + imageId, // Assuming your server-side action URL
                        method: "POST", // Assuming your server-side method expects POST
                        data: { imageId: imageId }, // Send image ID as data
                        success: function (data) {
                            // Handle successful deletion response (optional)
                            console.log("Image deletion status:", data);
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                            // Handle error response (e.g., display error message)
                            console.error("Error deleting image:", xhr.status, thrownError);
                        }
                    });
                } else {
                    console.error("Image element with ID 'hotelImage_" + imageId + "' not found.");
                }
            }
        </script>
    }
</div>

    
