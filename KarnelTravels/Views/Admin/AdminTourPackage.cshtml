﻿@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@model GetAllPack;
<div>
    <a class="btn btn-info" href="/admin/ViewCreateTourPackage">Create new tour package</a>
</div>
<br/>
<div class="ibox">
    <div class="ibox-head">
        <h3 class="ibox-title">Hotel/Resort/Restaurant List</h3>
    </div>
    <div class="ibox-body">
        <div class="card-group">
            @foreach (var item in Model.Packages)
            {

                <div class="col-md-2 mt-1">
                    <div class="card h-100">
                        <img class="card-top-img" src="~/img/tblTour_Packages/@item.url" height="200px" width="auto" />
                        <div class="card-body">
                            <h5 class="card-title"><span><strong>Entity Name: </strong></span></h5>
                            <h6 class="card-title"><span style="color:navy">@item.Name</span></h6>
                            <br/>
                            <div class="text-muted card-subtitle">@item.StartDate - @item.EndDate</div>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-info" href="/admin/ViewEditAdminTourPackage?idt=@item.PackageId"><i class="fa fa-plus"></i> Edit</a>
                            <a class="btn btn-danger" href="/admin/DeleteAdminPackage?idt=@item.PackageId"><i class="fa fa-plus"></i> Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("AdminTourPackage", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("AdminTourPackage", new { page = i, pageSize = Model.PageSize })">@i</a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("AdminTourPackage", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>
