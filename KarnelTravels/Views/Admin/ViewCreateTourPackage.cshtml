@model GetHotel_Res_Re;
<div class="row">
    <div class="col-8" style="min-height:40rem;">
        <form id="frmData" action="/admin/CreateTourPackage" method="post" enctype="multipart/form-data">
            <div>Name</div>
            <input type="text" name="Name">
            <div>Price</div>
            <input type="text" name="TotalPrice">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Start Date</label>
                <div class="col-sm-10">
                    @* //<input class="form-control" id="password1" type="datetime" name="StartDate"> *@
                    <input type="date" value="@DateTime.Now" id="datepicker" name="StartDate">

                    <script>
                        $(function () {
                            $("#datepicker").datepicker();
                        });
                    </script>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">End Date</label>
                <div class="col-sm-10 ml-sm-auto">
                    <input  name="EndDate" type="date" >
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"Spot</label>
                <select class="form-select border-0 py-3" name="spot">
                    <option selected>Chon</option>
                    @foreach (var item in Model.tblSpots)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
           @*  <select id="hotelDropdown" name="selectObject">
                @foreach (var item in Model.selectObject)
                {
                    <option value="@item.Text">@item.Text</option>
                }
            </select> *@
            <div class="col-sm-10">
                <input class="form-control" type="file" name="FileImg" multiple>
            </div>
            <div id="editor"></div>
            <input type="hidden" name="mydata" id="mydata" value="" />
            <input type="submit" name="btnSave" id="btnSave" value="Save" />
        </form>

