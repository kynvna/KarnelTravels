@model KarnelTravels.Models.TblTouristPlace
@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" action="EditTouristPlace" class="mt-3" autocomplete="off" enctype="multipart/form-data">

    <div class="mb-3">
        <label class="form-lable">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly/>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-lable">Name Tuorist Place</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Spot</label>
        <select class="form-control form-control-lg" asp-for="SportId" aria-describedby="basic-addon1"
                required>
            <option value="1">Nha trang</option>
            <option value="2">Da Lat</option>
            <option value="3">Vung Tau</option>
            <option value="4">TpHCM</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-lable">Descrirption</label>
        <input type="text" class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <select class="form-control form-control-lg" asp-for="Status" aria-describedby="basic-addon1"
                required>
            <option>True</option>
            <option>False</option>
        </select>
    </div>
    <div class="form-group">
        <label for="files">Images:</label>
        <input type="file" id="files" name="files" class="form-control-file" multiple />
    </div>




    <div class="mb-3">
        <div class="col-lg-12 d-frid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
