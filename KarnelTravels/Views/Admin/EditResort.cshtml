@model KarnelTravels.Models.TblHotelRestaurant
@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" action="EditResort" class="mt-3" autocomplete="off" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-lable">ID</label>
        <input type="text" class="form-control" asp-for="HrId" readonly/>
        <span asp-validation-for="HrId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Name Resort</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <select class="form-control form-control-lg" asp-for="SpotId" aria-describedby="basic-addon1"
                required>
            <option value="1">Nha trang</option>
            <option value="2">Da Lat</option>
            <option value="3">Vung Tau</option>
            <option value="4">TpHCM</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-lable">Price</label>
        <input type="text" class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Descrirption</label>
        <input type="text" class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <select class="form-control form-control-lg" asp-for="Status" aria-describedby="basic-addon1"
                required>
            <option>True</option>
            <option>False</option>
        </select>
    </div>
    <div class="form-group">
        <label for="files">Image:</label>
        <input type="file" id="files" name="files" class="form-control-file" multiple/>
    </div>




    <div class="mb-3">
        <div class="col-lg-12 d-frid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
