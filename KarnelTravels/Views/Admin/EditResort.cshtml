@model KarnelTravels.Models.TblHotelRestaurant
@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" action="EditResort" class="mt-3" autocomplete="off" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-lable">ID</label>
        <input type="text" class="form-control" asp-for="HrId" readonly/>
        <span asp-validation-for="HrId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Name Resort</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Spot Id</label>
        <input type="number" class="form-control" asp-for="SpotId" />
        <span asp-validation-for="SpotId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Price</label>
        <input type="text" class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Descrirption</label>
        <input type="text" class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Image id</label>
        <input type="number" class="form-control" asp-for="ImageLinkId" />
        <span asp-validation-for="ImageLinkId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-lable">Image Link</label>
        <input type="file" class="form-control" asp-for="Imglink" />
        <span asp-validation-for="Imglink" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <input type="checkbox" class="form-check-input" asp-for="Status" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>



    <div class="mb-3">
        <div class="col-lg-12 d-frid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

<style>
    /* Style for form labels */
    .form-label {
        font-weight: bold;
    }

    /* Style for form inputs */
    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-bottom: 1rem;
    }

    /* Style for error messages */
    .text-danger {
        color: #dc3545; /* Red color */
    }

    /* Style for submit button */
    .btn-primary {
        background-color: #007bff; /* Blue color */
        color: #fff;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    /* Style for success and error messages */
    .alert {
        padding: 0.5rem;
        margin-bottom: 1rem;
        border-radius: 4px;
    }

    .alert-success {
        background-color: #d4edda; /* Green color for success */
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da; /* Red color for error */
        border: 1px solid #f5c6cb;
    }
</style>