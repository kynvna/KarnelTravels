@model KarnelTravels.Models.TblSpot
@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="ibox">
    <div class="ibox-head">
        <h3 class="ibox-title">Create new spot</h3>
    </div>
    <div class="ibox-body">
        <form method="post" action="CreateSpot" class="mt-3" autocomplete="off" enctype="multipart/form-data">
            <div class="row">
                <div class="form-group col-md-12">
                    <label>Spot/City/Location's Name: </label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label>Active</label>
                    <input type="checkbox" asp-for="Status" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="AdminSpot" asp-controller="Admin" class="btn btn-danger">Go back</a>
                </div>
            </div>
        </form>
    </div>
</div>

