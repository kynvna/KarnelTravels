@model List<KarnelTravels.Models.TouristPlaceViewModel>
@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="ibox">
    <div class="ibox-head">
        <h3 class="ibox-title">Sight List</h3>
    </div>
    <div class="ibox-body">
        <div class="card-group">
            @if (Model != null && Model.Any())
            {
                @foreach (var place in Model)
                {
                    <div class="col-md-3 p-1">
                        <div class="card h-100">
                            <img src="~/img/TblTourist_Place/@place.ImageUrl" class="card-img-top" alt="Place Image" style="height: 300px; width: auto;" />
                            <div class="card-body">
                                <h5 class="card-title">
                                    <span><strong>Entity Name: </strong>@place.Name</span>
                                </h5>
                                <p class="card-text"><strong>Spot location: </strong>@place.Namespot</p>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Admin" asp-action="EditTouristPlace" asp-route-id="@place.Id" class="btn btn-info">Edit</a> &nbsp;
                                <form style="display: inline-block;" asp-controller="Admin" asp-action="DeleteTouristPlace" method="post">
                                    <input type="hidden" name="id" value="@place.Id" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this hotel?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div>
                    No Hotel available at this moment
                </div>
            }
        </div>
    </div>
</div>

