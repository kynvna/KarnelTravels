@model List<KarnelTravels.Models.TblSpot>
@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--This is where all spots (categories) is shown and manage.-->
<div class="ibox">
    <div class="ibox-head">
        <a asp-action="CreateSpot" asp-controller="Admin" class="btn btn-info">Create new spot</a>
    </div>
    <div class="ibox-body">
        <form>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Name</th>
                        <th class="text-center" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var spot in Model)
                        {
                            <tr>
                                <td class="text-center">@spot.Id</td>
                                <td class="text-center">@spot.Name</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <form><a asp-controller="Admin" asp-action="EditSpot" asp-route-id="@spot.Id" class="btn btn-primary">Edit</a></form>
                                        &nbsp;
                                        <form asp-controller="Admin" asp-action="DeleteSpot" method="post">
                                            <input type="hidden" name="id" value="@spot.Id" />
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this spot?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">
                                <div>
                                    No Resort available at this moment
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>
