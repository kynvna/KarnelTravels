@model List<KarnelTravels.Models.TblSpot>
@{
    ViewBag.Title = "FormCkeditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Restaurant List</h1>

<form>
    <button asp-action="CreateSpot" asp-controller="Admin" class="btn btn-primary">Create Spot</button>
    <table class="table table-responsive table-hover">
        <thead>
            <tr class="table active">
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var spot in Model)
                {
                    <tr>
                        <td class="text-center">@spot.Name</td>
                        <td class="text-center">@spot.Id</td>

                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Admin" asp-action="EditSpot" asp-route-id="@spot.Id" class="btn btn-primary">Edit</a>
                                <form asp-controller="Admin" asp-action="DeleteSpot" method="post">
                                    <input type="hidden" name="id" value="@spot.Id" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this spot?')">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">
                        <div>
                            No Resort available at this moment
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>