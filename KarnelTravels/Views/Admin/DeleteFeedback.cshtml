@model KarnelTravels.Models.TblFeedback

@{
    ViewData["Title"] = "Delete Feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--This is the view before deleting a feedbacks, to ensure that the user have selected the correspond action.-->
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="ibox">
            <div class="ibox-body">
                <h3>Are you sure you want to delete this feedback?</h3>
                <hr/>
                <div>
                    <dl class="dl-horizontal">
                        <dt>Customer Id:</dt>
                        <dd>@Model.CustomerId</dd>
                        <dt>Feedback:</dt>
                        <dd>@Model.Feedback</dd>
                        <dt>Rating:</dt>
                        <dd>@Model.Rating</dd>
                        <dt>Status:</dt>
                        <dd>@Model.Status</dd>
                        <dt>Date:</dt>
                        <dd>@Model.Date</dd>
                    </dl>
                </div>
                <form asp-action="DeleteFeedback">
                    <input type="hidden" asp-for="FeedbackId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="GetAllFeedBacks" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>