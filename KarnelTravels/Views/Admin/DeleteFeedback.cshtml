@model KarnelTravels.Models.TblFeedback

@{
    ViewData["Title"] = "Delete Feedback";
}

<h2>Delete Feedback</h2>
<h3>Are you sure you want to delete this feedback?</h3>
<div>
    <h4>@Model.FeedbackObject</h4>
    <dl class="dl-horizontal">
        <dt>Customer Id:</dt>
        <dd>@Model.CustomerId</dd>
        <dt>Feedback:</dt>
        <dd>@Model.Feedback</dd>
        <dt>Rating:</dt>
        <dd>@Model.Rating</dd>
        <dt>Status:</dt>
        <dd>@Model.Status</dd>
        <dt>Date:</dt>
        <dd>@Model.Date</dd>
    </dl>
</div>

<form asp-action="DeleteFeedback">
    <input type="hidden" asp-for="FeedbackId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="GetAllFeedBacks" class="btn btn-secondary">Cancel</a>
</form>