<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Karnel Travel Guide</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">

</head>

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <div class="container-fluid nav-bar bg-transparent">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand d-flex align-items-center text-center">
                    <div class="icon p-2 me-2">
                        <img class="img-fluid" src="/img/icon-deal.png" alt="Icon" style="width: 30px; height: 30px;">
                    </div>
                    <h1 class="m-0 text-primary"><strong>KAR</strong><strong style="color:orange">NEL</strong></h1>
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Home</a>
                        <a asp-controller="Home" asp-action="AdvancedSearch" class="nav-item nav-link">Advanced Search</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Travelling</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a asp-controller="Home" asp-action="TravellingTransportView" class="dropdown-item">Transportation</a>
                                <a asp-controller="Home" asp-action="TravellingSightView" class="dropdown-item">Sights</a>
                                <a asp-controller="Home" asp-action="TravellingHotelView" class="dropdown-item">Hotels & Resort & Restaurant</a>
                                <a asp-controller="Home" asp-action="TravellingPackageView" class="dropdown-item">Package</a>
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">News & Interest</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a asp-controller="Home" asp-action="NewsView" class="dropdown-item">News</a>
                                <a asp-controller="Home" asp-action="AboutUsView" class="dropdown-item">About us</a>
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Misc</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a asp-controller="Admin" asp-action="Login" class="dropdown-item">Admin</a>
                                <a asp-controller="Admin" asp-action="Help" class="dropdown-item">Sitemap</a>
                            </div>
                        </div>
                    </div>
                    @*  <a class="btn btn-primary px-3 d-none d-lg-flex">Leave Feedback</a> *@
                    <!-- Trigger Button -->

                    <a class="btn btn-primary px-3 d-none d-lg-flex" data-bs-toggle="modal" data-bs-target="#commentModal"
                       data-feedback-object="Company" data-object-id=1234>
                        Leave Feedback
                    </a>
                </div>
                <!-- Include the Feedback Modal -->
                @*  @Html.Partial("_FeedbackModal", new FeedbackViewModel { IsSubmitted = false }) *@
                <partial name="_FeedbackModal" model="new FeedbackViewModel { IsSubmitted = false }" />

            </nav>
        </div>
        <!-- Navbar End -->
        <!-- Header Start -->
        <div class="container-fluid header bg-white p-0">
            <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
                <div class="col-md-6 p-5 mt-lg-5">
                </div>
                <div class="col-md-6 animated fadeIn">
                </div>
            </div>
        </div>
        <!-- Header End -->
        <br />
        @RenderBody()
        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-4 col-md-4">
                        <h5 class="text-white mb-4">Get In Touch</h5>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>102 Nguyen Dinh Chinh, HCMC</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+09001080</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>karneltravel@gmail.com</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <h5 class="text-white mb-4">Quick links</h5>
                        <a class="btn btn-link text-white-50" data-bs-toggle="modal" data-bs-target="#commentModal">Leave Feedback</a>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="AboutUsView" class="dropdown-item">About Us</a>

                    </div>
                    <div class="col-lg-4 col-md-4">
                        <h5 class="text-white mb-4">Newsletter</h5>
                        <p>Dolor amet sit justo amet elitr clita ipsum elitr est.</p>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                            <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-12 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" asp-controller="Home" asp-action="Index">Karnel Travel</a>, All Right Reserved.
                            Designed By Aptech Saigon's Students'
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script>
        window.onload = function () {
            window.scrollTo(0, 100);
        }
    </script>
    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>