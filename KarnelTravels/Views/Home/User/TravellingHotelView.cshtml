<!-- Search Start
@model GetHotel_Res_Re;
@{
    ViewData["Title"] = "Hotel & Resort";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var All = ViewBag.all as GetHotel_Res_Re;
    var hotel = ViewBag.hotel as GetHotel_Res_Re;
    var res = ViewBag.res as GetHotel_Res_Re;
    var re = ViewBag.re as GetHotel_Res_Re;
}


<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <form action="/home/TravellingHotelViewSearch">
            <div class="row g-2">
                <div class="col-md-8">
                    <div class="row g-2">
                        <div class="col-md-12">
                            <input name="keyWord" type="text" class="form-control border-0 py-3" placeholder="Enter Hotels, Resorts, Restaurants name to filter out similar. Ex: Hotel Jebron Lames">
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-dark border-0 w-100 py-3">Find</button>
                </div>
                <div class="col-md-2">
                    <span><a class="btn btn-warning border-0 w-100 py-3" asp-controller="Home" asp-action="TravellingHotelView">Clear filter</a></span>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Search End -->
<!-- Hotel & Resorts List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">Hotels & Resorts & Restaurants</h1>
                    <p>You can search for Hotels / Resorts / Restaurants in this page. Please use th search bar above to filter out your need.</p>
                </div>
            </div>
            <div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
                <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-danger active" data-bs-toggle="pill" href="#tab-1">Hot</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#tab-2">Hotels</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#tab-3">Restaurant</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#tab-4">Resort</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">

                    @foreach (var item in All.All)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp card border-0" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href="/home/HotelDetails?idt=@item.HrId"><img class="card-img-top" height="300px" src="/img/Hotel_Restaurant/@item.url" alt=""></a>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">Accomodations</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <a class="d-block h5 mb-2" href="/home/HotelDetails?idt=@item.HrId">@item.Name</a>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>Estimate Service Price: @item.Price SGD</small>
                                </div>
                            </div>
                        </div>
                    }

                    <nav aria-label="Page navigation example wow fadeInUp">
                        <ul class="pagination justify-content-center">
                            @if (All.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("TravellingHotelView", new { page =  All.CurrentPage - 1, pageSize =  All.PageSize })" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            }
                            @for (int i = 1; i <= All.TotalPages; i++)
                            {
                                <li class="page-item @(i ==  All.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("TravellingHotelView", new { page = i, pageSize =  All.PageSize })">@i</a>
                                </li>
                            }
                            @if (All.CurrentPage < All.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("TravellingHotelView", new { page =  All.CurrentPage + 1, pageSize =  All.PageSize })" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
            <div id="tab-2" class="tab-pane fade show p-0">
                <div class="row g-4">
                    @foreach (var item in hotel.All)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp card border-0" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href="/home/HotelDetails?idt=@item.HrId"><img class="card-img-top" height="300px" src="/img/Hotel_Restaurant/@item.url" alt=""></a>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">Accomodations</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <a class="d-block h5 mb-2" href="/home/HotelDetails?idt=@item.HrId">@item.Name</a>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>Estimate Service Price: @item.Price SGD</small>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div id="tab-3" class="tab-pane fade show p-0">
                <div class="row g-4">
                    @foreach (var item in res.All)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp card border-0" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href="/home/HotelDetails?idt=@item.HrId"><img class="card-img-top" height="300px" src="/img/Hotel_Restaurant/@item.url" alt=""></a>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">Accomodations</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <a class="d-block h5 mb-2" href="/home/HotelDetails?idt=@item.HrId">@item.Name</a>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>Estimate Service Price: @item.Price SGD</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div id="tab-4" class="tab-pane fade show p-0">
                <div class="row g-4">
                    @foreach (var item in re.All)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp card border-0" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href="/home/HotelDetails?idt=@item.HrId"><img class="card-img-top" height="300px" src="/img/Hotel_Restaurant/@item.url" alt=""></a>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">Accomodations</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <a class="d-block h5 mb-2" href="/home/HotelDetails?idt=@item.HrId">@item.Name</a>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>Estimate Service Price: @item.Price SGD</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Property List End -->
