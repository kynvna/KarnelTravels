@model List<KarnelTravels.Models.TblHotelRestaurant>
@{
    ViewData["Title"] = "Hotel & Resorts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <div class="row g-2">
            <div class="col-md-10">
                <div class="row g-2">
                    <div class="col-md-12">
                        <input type="text" class="form-control border-0 py-3" placeholder="What are you looking for ?">
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <button class="btn btn-dark border-0 w-100 py-3">Find</button>
            </div>
        </div>
    </div>
</div>
<!-- Search End -->
<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <!-- Tabs Start -->
            <div class="col-lg-6">
                <ul class="nav nav-pills d-inline-flex justify-content-start mb-5" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="tphcm-tab" data-bs-toggle="pill" data-bs-target="#tphcm" type="button" role="tab" aria-controls="tphcm" aria-selected="true">TPHCM</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="nha-trang-tab" data-bs-toggle="pill" data-bs-target="#nha-trang" type="button" role="tab" aria-controls="nha-trang" aria-selected="false">Nha Trang</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="da-lat-tab" data-bs-toggle="pill" data-bs-target="#da-lat" type="button" role="tab" aria-controls="da-lat" aria-selected="false">Da Lat</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="vung-tau-tab" data-bs-toggle="pill" data-bs-target="#vung-tau" type="button" role="tab" aria-controls="vung-tau" aria-selected="false">Vung Tau</button>
                    </li>
                </ul>
            </div>
            <!-- Tabs End -->
            <!-- Tab Content Start -->
            <div class="col-lg-6">
                <div class="tab-content">
                    <!-- TPHCM Tab Content Start -->
                    <div class="tab-pane fade show active" id="tphcm" role="tabpanel" aria-labelledby="tphcm-tab">
                        <!-- TPHCM Hotel List Start -->
                        <div class="row g-4">
                            <!-- Razor code to display TPHCM hotels -->
                            @foreach (var hotel in ViewBag.TPHCMHotels)
                            {
                                <div class="col-md-6">
                                    <!-- Hotel card -->
                                    <div class="card">
                                        <!-- Hotel details -->
                                        <div class="card-body">
                                            <h5 class="card-title">@hotel.Name</h5>
                                            <p class="card-text">@hotel.Description</p>
                                            <p class="card-text">Price: @hotel.Price</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- TPHCM Hotel List End -->
                    </div>
                    <!-- TPHCM Tab Content End -->
                    <!-- Other Tabs Content (Nha Trang, Da Lat, Vung Tau) -->
                    <!-- Add similar HTML structure for other tabs as above -->
                </div>
            </div>
            <!-- Tab Content End -->
        </div>
    </div>
</div>
<!-- Property List End -->
