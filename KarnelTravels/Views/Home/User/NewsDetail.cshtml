 @model KarnelTravels.Models.NewsDetailViewModel
@{
    ViewData["Title"] = "News Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script> *@

<div class="container bg-white">
    <br />
    <div class="row p-4">
        <div class="col-md-12">
            <h1 class="display-4 wow fadeInUp">@Model.MainNewsWithImages.NewsItem.Description</h1>
            <h4 class="wow fadeInUp">
                <span><strong>News related to: </strong></span>
                <span style="color:red">@Model.MainNewsWithImages.NewsItem.NewsObject</span>
                
            </h4>
            <p class="text-muted wow fadeInUp">
                <span>
                    <strong>Date posted: </strong>
                </span>
                <span>@Model.MainNewsWithImages.NewsItem.Date?.ToString("MMMM dd, yyyy")</span>
                <span>
                    <strong> - Article ID: </strong>
                </span>
                &nbsp;<span>@Model.MainNewsWithImages.NewsItem.NewsId</span>
            @if (Model.MainNewsWithImages.ImageUrls != null && Model.MainNewsWithImages.ImageUrls.Any())
            {
                <div id="newsImageCarousel" class="carousel slide wow fadeInUp" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.MainNewsWithImages.ImageUrls.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img class="d-block w-100" height="800px" src="@Url.Content("~/img/" + Model.MainNewsWithImages.NewsItem.NewsObject + "/" + Model.MainNewsWithImages.ImageUrls[i].Url)" alt="Slide @(i+1)">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#newsImageCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#newsImageCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <p>No images available for this news item.</p>
            }
            <br/>
            <div class="wow fadeInUp"><strong>Article's Content: </strong></div>
            <br />
            <div class="wow fadeInUp" style="font-family: 'Arial', sans-serif; font-size: 1rem;">
                @Html.Raw(Model.MainNewsWithImages.NewsItem.NewsDetail)
            </div>   
        </div>
    </div>
</div>
<!-- News Infomation Section End -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="mb-3">Related News</h1>
            <p>See some related news to this article, maybe you'll find some other details you need or just simply <span><a asp-controller="Home" asp-action="NewsView">go back</a></span> to the news page</p>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">

            @foreach (var relatedNews in Model.RelatedNewsWithImages)
            {
                <div class="testimonial-item bg-light rounded p-3">
                    <div class="bg-white border rounded p-4">
                        <p class="text-center">@relatedNews.NewsItem.Description</p>
                        <p class="text-center"><a href="@Url.Action("NewsDetail", "Home", new { id = relatedNews.NewsItem.NewsId })">Click to view details</a></p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
