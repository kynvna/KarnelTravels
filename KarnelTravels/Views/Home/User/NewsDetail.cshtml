
 @model KarnelTravels.Models.NewsDetailViewModel
@{
    ViewData["Title"] = "News Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* 
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script> *@

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">@Model.MainNewsWithImages.NewsItem.Description</h1>
            <p class="text-muted">@Model.MainNewsWithImages.NewsItem.Date?.ToString("MMMM dd, yyyy")</p>
            <div style="font-family: 'Arial', sans-serif; font-size: 1rem;">
                @Html.Raw(Model.MainNewsWithImages.NewsItem.NewsDetail)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @if (Model.MainNewsWithImages.ImageUrls != null && Model.MainNewsWithImages.ImageUrls.Any())
            {
                <div id="newsImageCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.MainNewsWithImages.ImageUrls.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img class="d-block w-100" src="@Url.Content("~/img/" + Model.MainNewsWithImages.NewsItem.NewsObject + "/" + Model.MainNewsWithImages.ImageUrls[i].Url)" alt="Slide @(i+1)">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#newsImageCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#newsImageCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <p>No images available for this news item.</p>
            }
        </div>
        <!-- Sidebar for related news -->
        <div class="col-md-4">
            <h3>About this news</h3>
            <p>@Model.MainNewsWithImages.NewsItem.Description</p>
            <!-- Other details here -->
            <!-- Related news section -->
            <div class="mt-4">
                <h4>Related News</h4>
                @foreach (var relatedNews in Model.RelatedNewsWithImages)
                {
                    <p><a href="@Url.Action("NewsDetail", "Home", new { id = relatedNews.NewsItem.NewsId })">@relatedNews.NewsItem.Description</a></p>
                }
            </div>
        </div>
    </div>
</div>
<!-- News Infomation Section End -->