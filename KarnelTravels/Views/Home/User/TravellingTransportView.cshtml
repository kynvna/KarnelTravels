<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <form action="/home/TravellingTransportViewSearch">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="tran">
                                <option selected>Chon Phuong Tien</option>
                                @foreach (var item in Model.Transportations)
                                {
                                    <option value="@item.CatId">@item.CatName</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="spot">
                                <option selected>Chon Diem Di</option>
                                @foreach (var item in Model.Spots)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="spot1">
                                <option selected>Chon Diem Den</option>
                                @foreach (var item in Model.Spots)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }

                            </select>
                        </div>


                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-dark border-0 w-100 py-3">Find</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Search End -->
