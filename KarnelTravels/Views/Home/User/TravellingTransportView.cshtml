@{
    ViewData["Title"] = "Package Tours";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var ls = ViewBag.all as GetCar_Plane_Train;
}
@model GetCar_Plane_Train;
<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <form action="/home/TravellingTransportViewSearch">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="tran">
                                <option selected>--- Select Transport Type ---</option>
                                @foreach (var item in Model.Transportations)
                                {
                                    <option value="@item.CatId">@item.CatName</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="spot">
                                <option selected>--- Departure Spot ---</option>
                                @foreach (var item in Model.Spots)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="spot1">
                                <option selected>--- Arrival Spot ---</option>
                                @foreach (var item in Model.Spots)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }

                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-dark border-0 w-100 py-3">Find</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Search End -->
<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">Transportation List</h1>
                    <p>All of our means of transortation - You can view each individually or use the search bar above to filter as your liking.</p>
                </div>
            </div>
            <div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
                <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-danger active" data-bs-toggle="pill" href="#tab-1">Recommend</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#tab-2">Cars</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#tab-3">Plane</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#tab-4">Train</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @foreach (var item in ls.All)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href="/home/TransportDetails?idt=@item.TravelId"><img class="img-fluid" src="/img/Travel/@item.url" alt=""></a>
                                    @if (@item.Status == "true")
                                    {
                                        <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">Active</div>
                                    }
                                    else
                                    {
                                        <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">Not Active</div>
                                    }
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">Transportation</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <a href="/home/TransportDetails?idt=@item.TravelId" class="d-block h5 mb-2"><strong>From -> To: </strong> <span style="text-decoration:none">@item.Name</span></a>  
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-money text-primary me-2"></i><strong>Estimate Price: </strong><span>@item.Price</span>VND</small>
                                </div>
                            </div>
                        </div>
                    }
                    }
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            @if (ls.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("TravellingTransportView", new { page =  ls.CurrentPage - 1, pageSize =  ls.PageSize })" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            }
                            @for (int i = 1; i <= ls.TotalPages; i++)
                            {
                                <li class="page-item @(i ==  ls.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("TravellingTransportView", new { page = i, pageSize =  ls.PageSize })">@i</a>
                                </li>
                            }
                            @if (ls.CurrentPage < ls.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("TravellingTransportView", new { page =  ls.CurrentPage + 1, pageSize =  ls.PageSize })" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
            <div id="tab-2" class="tab-pane fade show p-0">
                <div class="row g-4">
                    @foreach (var item in Model.Cars)
                    {
