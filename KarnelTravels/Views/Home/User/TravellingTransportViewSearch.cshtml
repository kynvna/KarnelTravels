@{
    ViewData["Title"] = "Package Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GetCar_Plane_Train;
<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <form action="/home/TravellingTransportViewSearch">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="tran">
                                <option selected>--Pick A Mean Of Transport--</option>
                                @foreach (var item in Model.Transportations)
                                {
                                    <option value="@item.CatId">@item.CatName</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="spot">
                                <option selected>--Select Departure Spot--</option>
                                @foreach (var item in Model.Spots)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select border-0 py-3" name="spot1">
                                <option selected>--Select Arrival Spot--</option>
                                @foreach (var item in Model.Spots)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }

                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-dark border-0 w-100 py-3">Filter</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Search End -->
<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-12">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3 text-center">Search Result For Transportation</h1>
                    <p class="mb-3 text-center">Here is your search result based on what you've filtered'</p>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @foreach (var item in Model.All)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href=""><img class="img-fluid" src="/img/Travel/@item.url" alt=""></a>
                                    <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">Domestic Tour</div>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">Appartment</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <h5 class="text-primary mb-3">@item.Name</h5>
                                    <a class="d-block h5 mb-2" href="/home/TransportDetails?idt=@item.TravelId">@item.Price</a>
                                    <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.SpotDeparture - @item.SpotDestination</p>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>1000 Sqft</small>
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>3 Bed</small>
                                    <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>2 Bath</small>
                                </div>
                            </div>
                        </div>
                    }


                    <div class="col-12 text-center">
                        <a class="btn btn-primary py-3 px-5" asp-action="TravellingTransportView" asp-controller="Home">Return to transport page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Property List End -->
