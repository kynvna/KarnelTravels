@{
    ViewData["Title"] = "Tours";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}
@model SearchViewModel

<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <form action="/home/TravellingHotelViewSearch">
            <div class="row g-2">
                <div class="col-md-8">
                    <div class="row g-2">
                        <div class="col-md-12">
                            <input name="keyWord" type="text" class="form-control border-0 py-3" placeholder="Enter Hotels, Resorts, Restaurants name to filter out similar. Ex: Hotel Jebron Lames">
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-dark border-0 w-100 py-3">Find</button>
                </div>
                <div class="col-md-2">
                    <span><a class="btn btn-warning border-0 w-100 py-3" asp-controller="Home" asp-action="TravellingHotelView">Clear filter</a></span>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Search End -->
<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-12">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3 text-center">Hotels & Resorts & Restaurants</h1>
                    <p class="text-center">Your filtered result is here !!! Have you seen what you wanted. If not, feel free to engage the search bar again</p>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">

                    @foreach (var item in Model.HotelRestaurants)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href="/home/HotelDetails?idt=@item.HrId"><img class="img-fluid" src="/img/Hotel_Restaurant/@item.url" alt=""></a>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">Accomodations</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <a class="d-block h5 mb-2" href="/home/HotelDetails?idt=@item.HrId">@item.Name</a>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>Estimate Service Price: @item.Price SGD</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Property List End -->
